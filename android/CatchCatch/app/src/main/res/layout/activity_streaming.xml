<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/activity_streaming_constraint_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_streaming_constraint_layout_streaming"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/activity_streaming_exoplayer_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000">

        </com.google.android.exoplayer2.ui.PlayerView>

        <Button
            android:id="@+id/activity_streaming_button_video_recording_stop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="중지"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </Button>

        <Button
            android:id="@+id/activity_streaming_button_video_recording_download"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="다운로드 중"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </Button>

        <Button
            android:id="@+id/activity_streaming_button_video_recording_run"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="녹화"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent">

        </Button>

        <Button
            android:id="@+id/activity_streaming_button_voice_recording_stop"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="중지"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_streaming_button_video_recording_run">

        </Button>

        <Button
            android:id="@+id/activity_streaming_button_voice_recording_run"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="녹음"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/activity_streaming_button_video_recording_run">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_streaming_constraint_layout_client_not_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_is_not_connected"
            android:textSize="24sp"
            android:gravity="center_horizontal|center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <Button
            android:id="@+id/activity_streaming_button_wifi_setting"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:background="@drawable/wifi_setting_button"
            android:layout_gravity="center"
            android:text="@string/connect"
            android:textColor="#ffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8">

        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_streaming_constraint_layout_server_not_connect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/server_is_not_connected"
            android:textSize="24sp">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>