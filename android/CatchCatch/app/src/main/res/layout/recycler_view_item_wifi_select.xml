<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/recycler_view_item_setting_constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/storage_eage">

    <TextView
        android:id="@+id/recycler_view_item_wifi_select_ssid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="ssid"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/recycler_view_item_wifi_select_check"
        app:layout_constraintHorizontal_bias="0.05"/>

    <Button
        android:id="@+id/recycler_view_item_wifi_select_check"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitXY"
        android:background="@drawable/check_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.99"/>

</androidx.constraintlayout.widget.ConstraintLayout>